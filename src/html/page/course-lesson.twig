{% extends '../modules/course-base.twig' %}
{% block page %}
    <section class="lesson-hero">
        <div class="wrapper">
            <h1 class="lesson-hero__title">Способы вязания. Научись вязать</h1>
            <div class="lesson-hero__slider">
                <div class="js-lesson-slider swiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div class="lesson-hero__video-wrap js-video-container">
                                <video class="lesson-hero__video js-video" src="video/knitting.mp4"></video>
                                <button class="lesson-hero__play-btn js-play" type="button">
                                    <svg class="lesson-hero__play-icon"><use xlink:href="images/icons.svg#play"></use></svg>
                                </button>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="lesson-hero__video-wrap js-video-container">
                                <video class="lesson-hero__video js-video" src="video/knitting.mp4"></video>
                                <button class="lesson-hero__play-btn js-play" type="button">
                                    <svg class="lesson-hero__play-icon"><use xlink:href="images/icons.svg#play"></use></svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="lesson-hero__slider-control _prev swiper-button-prev" type="button"></button>
                <button class="lesson-hero__slider-control _next swiper-button-next" type="button"></button>
            </div>
            <h2 class="lesson-hero__chapter">Глава 2. Вязание спицами по мокрому полу</h2>
            <p class="lesson-hero__lesson">Урок 3. Скользящие перехваты</p>
        </div>
    </section>
    <div class="course">
        <div class="wrapper">

            {# decore #}
            <div class="course__decor">
                <div class="decor-figure">
                    <div class="parallax-scroll" data-rellax-speed="2">
                        <div class="parallax">
                            <div class="parallax-move" data-depth="0.35">
                                <img src="images/decor/decor-3.svg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="decor-figure">
                    <div class="parallax-scroll" data-rellax-speed="3">
                        <div class="parallax">
                            <div class="parallax-move" data-depth="0.3">
                                <img src="images/decor/decor-3.svg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="decor-figure">
                    <div class="parallax-scroll" data-rellax-speed="1.2">
                        <div class="parallax">
                            <div class="parallax-move" data-depth="0.35">
                                <img src="images/decor/decor-3.svg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {# decore #}

            <div class="course__nav course-nav">
                <ul class=" course-nav__list">
                    <li class=" course-nav__chapter">
                        <h4 class=" course-nav__chapter-title">Глава 1</h4>
                        <a href="#" class=" course-nav__link">
                            <span>Урок 1</span>
                        </a>
                        <a href="" class="course-nav__link">
                            <svg><use xlink:href="images/icons.svg#checkmark"></use></svg>
                            <span>Задание</span>
                        </a>
                    </li>
                    <li class=" course-nav__chapter _locked">
                        <h4 class=" course-nav__chapter-title">Глава 1</h4>
                        <a href="#" class=" course-nav__link _locked">
                            <span>Урок 1</span>
                        </a>
                        <a href="" class="course-nav__link">
                            <svg><use xlink:href="images/icons.svg#pen"></use></svg>
                            <span>Задание</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="course__content">
                content
            </div>
        </div>
    </div>
{% endblock %}