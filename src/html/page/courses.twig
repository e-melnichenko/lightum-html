                            {
                                name: 'История вязания и инструментов',
                                disabled: true,
                            },
                        ]
                    },
                ] %}

                <ul>
                {% for chapter in chapterList %}
                    <li class="chapter__item {% if (chapter.disabled) %}_disabled{% endif %}">
                        <div class="chapter__top">
                            <h2 class="chapter__title">
                                <span>Глава {{ loop.index }}.</span>
                                <span>{{ chapter.title }}</span>
                            </h2>
                            <p class="chapter__text">{{ chapter.text }}</p>
                        </div>
                        <ul class="chapter__lessons-list">
                        {% for lesson in chapter.lessonsList %}
                            <li class="chapter__lesson {% if (lesson.disabled) %}_disabled{% endif %}">
                                <a href="#" class="chapter__lesson-link">
                                    <h3 class="chapter__lesson-title">
                                        <span class="chapter__lesson-number">Урок {{ loop.index }}.</span>
                                        <span>{{ lesson.name }}</span>
                                    </h3>
                                </a>
                            </li>
                        {% endfor %}
                        </ul>
                        <div class="chapter__bottom">
                            <a href="#" class="chapter__start-btn button purple _rounded"><span>Начать</span></a>
                            <p class="chapter__bottom-text">{{ chapter.bottomText }}</p>
                        </div>
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}